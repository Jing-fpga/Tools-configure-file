" Basic configure
set nocompatible

syntax on

set showmode

set showcmd

set mouse=a

set encoding=utf-8

set t_Co=256

filetype indent on

" Inndentation & Tabs

set autoindent

set smartindent

set tabstop=4

set shiftwidth=4

set softtabstop=4

set expandtab

set smarttab

" Display & format

set number

set relativenumber

set cursorline

set textwidth=80

set wrapmargin=2

 " Search

set showmatch

set hlsearch

set incsearch

set ignorecase

set smartcase

" Browse & Scroll

set scrolloff=5

set sidescrolloff=15

set laststatus=2

 " Spell

set spell spelllang=en_us

" Miscellaneous

set nobackup

set noswapfile

set undofile

set autochdir

set undofile
set undodir=~/.vim/.undo//

set noerrorbells

set visualbell

set errorbells

set autoread

set history=1000

set wildmenu

set wildmode=longest:list,full
